                  <% end %>
                </div>
                <div class="px-4 py-4 flex-1 flex flex-col">
                  <div class="flex justify-between items-center">
                    <%= if reward_badge_count(assigns, post) < 2 do %>
                      <ul class="gap-3 flex">
                        <%= if post.category do %>
                          <li class="uppercase text-xs font-extralight text-black tracking-[0.2em]"><span><%= post.category.name %></span></li>
                        <% end %>
                        <li class="text-xs font-light text-gray-500">
                          <span><%= if post.published_at, do: Calendar.strftime(post.published_at, "%b %d"), else: "Draft" %></span>
                        </li>
                      </ul>
                    <% end %>
                    <%= if has_earned_reward?(assigns, post) do %>
                      <.earned_badges reward={get_user_reward(assigns, post)} id={"earned_posts_five_6_#{post.id}"} />
                    <% else %>
                      <.token_badge post={post} balance={get_bux_balance(assigns, post)} id={"bux_posts_five_6_#{post.id}"} />
                    <% end %>
                  </div>
                  <h4 class="font-normal text-black mt-2 text-lg leading-6 tracking-wide"><%= post.title %></h4>
                </div>
              </.link>
            </div>
          <% end %>
        </div>
      </div>
      </div>
    <% end %>
  </div>
</section>
