                  <%= if assigns[:current_user] && @current_user.is_admin do %>
                    <button
                      phx-click="open_post_selector"
                      phx-value-section="posts_six"
                      phx-value-position="1"
                      class="absolute top-2 right-2 z-20 bg-white rounded-full p-2 shadow-md hover:bg-gray-100 transition-colors cursor-pointer"
