        <div class="md:w-1/2 w-full flex flex-col">
          <!-- First row: 2 small cards (Positions 1 & 2) -->
          <div class="flex lg:flex-row flex-col gap-3 wide-card">
            <div class="w-full flex md:flex-row flex-col gap-3">
