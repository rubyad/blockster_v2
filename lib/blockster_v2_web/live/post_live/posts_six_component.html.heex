              </button>
            <% end %>
            <.link navigate={~p"/#{post.slug}"} class="group rounded-lg bg-[#ffffff] bg-card flex flex-col justify-end overflow-hidden h-full" style={"background-image: url('#{ImageKit.w600_h800(post.featured_image)}'); background-size: cover; background-position: center; min-height: 400px;"}>
              <%= if post.video_id do %>
                <.video_play_icon size={:large} />
              <% end %>
              <!-- Content area that starts at bottom third height -->
              <div class="h-1/3 backdrop-blur-md bg-white/10 transition-all duration-500 ease-in-out group-hover:h-full overflow-hidden relative">
                <div class="absolute top-0 left-0 right-0 p-6 max-md:px-[22px] pb-[12px] pt-[22px] transition-all duration-500 ease-in-out">
                  <div class="flex justify-between items-center max-md:flex-col-reverse max-md:items-start max-md:gap-1.5">
                    <ul class="gap-3 flex">
                      <%= if post.category do %>
                        <li class="uppercase text-xs font-extralight text-white tracking-[0.2em]"><span><%= post.category.name %></span></li>
                      <% end %>
                      <li class="text-xs font-light text-white/80">
                        <span><%= if post.published_at, do: Calendar.strftime(post.published_at, "%b %d"), else: "Draft" %></span>
                      </li>
                    </ul>
                    <%= if has_earned_reward?(assigns, post) do %>
                      <.earned_badges reward={get_user_reward(assigns, post)} id={"earned_posts_six_5_#{post.id}"} />
                    <% else %>
                      <.token_badge post={post} balance={get_bux_balance(assigns, post)} id={"bux_posts_six_5_#{post.id}"} />
                    <% end %>
                  </div>
                  <h4 class="font-normal text-white mt-2 text-2xl leading-7 tracking-wide"><%= post.title %></h4>
                  <%= if post.excerpt do %>
                    <p class="font-light text-sm text-white leading-normal mt-2.5 max-md:hidden opacity-0 max-h-0 transition-all duration-500 ease-in-out group-hover:opacity-100 group-hover:max-h-24"><%= post.excerpt %></p>
                  <% end %>
                </div>
              </div>
            </.link>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</section>
