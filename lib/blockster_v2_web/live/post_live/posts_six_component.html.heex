<section id={"component-#{@id}"} class="grid-section-reverse py-6">
  <div class="mx-auto px-6 md:px-12 lg:px-48 xl:px-64 2xl:max-w-[1600px]">
    <%= if Map.get(assigns, :type) not in ["category-posts", "tag-posts", "home-posts"] && !Map.get(assigns, :hide_title) do %>
      <!-- Breadcrumb -->
      <p class="text-xs font-haas_roman_55 text-[#515B70] mb-2">
        <.link navigate={~p"/"} class="hover:text-[#141414] transition-colors">Home</.link>
        <span class="mx-2">â€º</span>
        <span><%= Map.get(assigns, :title, "Business") %></span>
      </p>

      <!-- Section Title -->
      <h2 class="font-haas_medium_65 mb-6 font-semibold text-4xl"><%= Map.get(assigns, :title, "Business") %></h2>
    <% end %>

    <%= if @posts == [] do %>
      <div class="text-center py-20">
        <p class="text-[#515B70] font-haas_roman_55">No posts available yet.</p>
      </div>
    <% else %>
      <!-- Mobile Layout -->
      <div class="md:hidden px-4">
        <!-- First post: Full-width hero card (same style as posts_three center post) -->
        <%= if Enum.at(@posts, 0) do %>
          <% first_post = Enum.at(@posts, 0) %>
          <div class="rounded-xl shadow-lg bg-white mb-4 relative">
            <%= if assigns[:current_user] && @current_user.is_admin do %>
              <button
                phx-click="open_bux_deposit_modal"
                phx-value-post-id={first_post.id}
                class="absolute top-2 right-2 z-10 bg-white rounded-full p-2 shadow-md hover:bg-gray-100 transition-colors cursor-pointer"
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#515B70]" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
                </svg>
              </button>
            <% end %>
            <.link navigate={~p"/#{first_post.slug}"} class="flex flex-col cursor-pointer">
              <div class="img-wrapper w-full overflow-hidden rounded-t-lg aspect-square relative">
                <%= if first_post.featured_image do %>
                  <img alt={first_post.title} src={ImageKit.w500_h500(first_post.featured_image)} class="w-full h-full object-cover" loading="lazy" />
                <% else %>
                  <div class="w-full h-full bg-gradient-to-br from-[#8AE388] to-[#BAF55F]"></div>
                <% end %>
                <%= if first_post.video_id do %>
                  <.video_play_icon size={:large} />
                <% end %>
              </div>
              <div class="px-4 py-4 pb-4 flex flex-col text-center">
                <div class="flex justify-center items-center mb-3">
                  <%= if first_post.category do %>
                    <span class="uppercase text-xs font-extralight text-black tracking-[0.2em]">
                      <%= first_post.category.name %>
                    </span>
                  <% end %>
                </div>
                <h3 class="font-bold text-black mt-2 text-xl leading-snug"><%= first_post.title %></h3>
                <%= if first_post.excerpt do %>
                  <p class="text-base font-light text-gray-500 mt-2 leading-relaxed"><%= first_post.excerpt %></p>
                <% end %>
                <p class="text-xs font-light text-gray-500 mt-2"><%= if first_post.published_at, do: Calendar.strftime(first_post.published_at, "%B %d, %Y"), else: "Draft" %></p>
                <div class="flex justify-center mt-auto pt-3">
                  <%= if has_earned_reward?(assigns, first_post) do %>
                    <.earned_badges reward={get_user_reward(assigns, first_post)} id={"earned_posts_six_mobile_hero_#{first_post.id}"} />
                  <% else %>
                    <.token_badge post={first_post} balance={get_bux_balance(assigns, first_post)} id={"bux_posts_six_mobile_hero_#{first_post.id}"} />
