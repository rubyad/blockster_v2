<div
  class="article-page bg-white min-h-screen"
  id="post-engagement-tracker"
  phx-hook="EngagementTracker"
  data-user-id={if @current_user, do: @current_user.id, else: "anonymous"}
  data-post-id={@post.id}
  data-word-count={@word_count}
  data-base-bux-reward={@post.base_bux_reward || 1}
  data-user-multiplier={@user_multiplier || 1}
  data-already-rewarded={to_string(@already_rewarded)}
  data-pool-available={to_string(@pool_available)}
  data-video-modal-open={to_string(@video_modal_open)}
>
  <!-- 3-Column Layout Container -->
  <div class="max-w-7xl mx-auto px-4 pt-[62px] md:pt-32 pb-16">
    <div class="flex gap-8 justify-center">

      <!-- LEFT SIDEBAR - Shop (Desktop only) -->
      <aside class="hidden lg:block w-[200px] shrink-0">
        <div class="sticky top-36 space-y-4">
          <div class="text-xs font-haas_medium_65 text-[#141414] uppercase tracking-wider">Shop</div>

          <%= for product <- @left_sidebar_products do %>
            <% first_image = Enum.at(product.images, 0) %>
            <% second_image = Enum.at(product.images, 1) || first_image %>
            <% price = if Enum.any?(product.variants), do: List.first(product.variants).price, else: Decimal.new(0) %>
            <% price_float = Decimal.to_float(price) %>
            <% discounted_price = price_float * (1 - (product.bux_max_discount || 0) / 100) %>
            <.link navigate={~p"/shop/#{product.handle}"} class="rounded-lg border border-[#1414141A] bg-white hover:shadow-lg transition-shadow cursor-pointer block">
              <div class="w-full overflow-hidden rounded-t-lg group" style="padding-bottom: 100%; position: relative; perspective: 1000px;">
                <%= if first_image do %>
                  <div
                    class="absolute inset-0 transition-transform duration-700 ease-in-out group-hover:[transform:rotateY(180deg)]"
                    style="transform-style: preserve-3d;"
                  >
                    <%!-- Front face (first image) --%>
                    <div class="absolute inset-0" style="backface-visibility: hidden;">
                      <img
                        src={ImageKit.w500_h500(first_image.src)}
                        alt={product.title}
                        class="w-full h-full object-cover"
                        loading="lazy"
                      />
                    </div>
                    <%!-- Back face (second image or same if only one) --%>
                    <div class="absolute inset-0" style="backface-visibility: hidden; transform: rotateY(180deg);">
                      <img
                        src={ImageKit.w500_h500(second_image.src)}
                        alt={product.title}
                        class="w-full h-full object-cover"
                        loading="lazy"
                      />
                    </div>
                  </div>
                <% end %>
                <%!-- Hub logo or Blockster lightning bolt --%>
                <div class="absolute top-2 left-2 z-10">
                  <%= if product.hub && product.hub.logo_url do %>
                    <img
                      src={ImageKit.w128_h128(product.hub.logo_url)}
                      alt={product.hub.name}
                      class="w-6 h-6 rounded-full object-cover shadow-sm"
                    />
                  <% else %>
                    <SharedComponents.lightning_icon size={24} />
                  <% end %>
                </div>
              </div>
              <div class="px-3 py-3">
                <h4 class="text-sm font-haas_medium_65 text-[#101D36] text-center mb-1.5 line-clamp-1">
                  {product.title}
                </h4>
                <div class="flex flex-col items-center mb-2">
                  <span class="text-xs font-haas_roman_55 text-[#9CA3AF] line-through">
                    $<%= :erlang.float_to_binary(price_float, decimals: 2) %>
                  </span>
                  <%= if (product.bux_max_discount || 0) > 0 do %>
                    <span class="text-lg font-haas_medium_65 text-black">
                      $<%= :erlang.float_to_binary(discounted_price, decimals: 2) %>
                    </span>
                    <span class="text-[10px] font-haas_roman_55 text-[#6B7280]">
                      with BUX tokens
                    </span>
                  <% else %>
                    <span class="text-lg font-haas_medium_65 text-[#141414]">
                      $<%= :erlang.float_to_binary(price_float, decimals: 2) %>
                    </span>
                  <% end %>
                </div>
                <div class="w-full py-1.5 bg-black text-white font-haas_medium_65 rounded-full text-xs text-center">
                  Buy Now
                </div>
              </div>
            </.link>
          <% end %>
        </div>
      </aside>

      <!-- CENTER COLUMN - Main Article Content -->
      <main class="w-full max-w-[680px]">

        <!-- Category -->
        <%= if @post.category do %>
          <div class="mb-4">
            <span class="text-sm font-haas_medium_65 text-[#141414] uppercase tracking-wider">{@post.category.name}</span>
          </div>
        <% end %>

        <!-- Title -->
        <h1 class="text-4xl md:text-5xl font-bold leading-tight text-[#141414] mb-6">
          {@post.title}
        </h1>

        <!-- Author & Date Row -->
        <div class="flex items-center gap-3 mb-6 text-sm">
          <span class="font-haas_medium_65 text-[#141414]">{@post.author_name}</span>
          <span class="text-[#141414A3]">·</span>
          <span class="text-[#141414A3]">{if @post.published_at, do: Calendar.strftime(@post.published_at, "%b %d, %Y"), else: "Draft"}</span>
          <%= if @post.hub do %>
            <span class="text-[#141414A3]">·</span>
            <.link navigate={~p"/hub/#{@post.hub.slug}"} class="flex items-center gap-1.5 hover:opacity-80">
              <%= if @hub_logo do %>
                <img src={@hub_logo} alt={@post.hub.name} class="h-4 w-4 rounded-full object-cover" />
              <% end %>
              <span class="font-haas_medium_65 text-[#141414]">{@post.hub.name}</span>
            </.link>
          <% end %>
        </div>

        <!-- Social Share Row (Sticky) -->
        <div class="sticky top-[58px] md:top-24 z-10 bg-white flex items-center gap-2 py-4 mb-4 border-b border-[#E7E8F1]">
          <!-- X/Twitter Share with BUX Reward -->
          <%= if @share_campaign && @share_campaign.is_active do %>
            <%= if @share_reward do %>
              <%!-- User has already shared - show success state with X branding + green ring --%>
              <div class="flex items-center gap-1">
                <%!-- Main success badge --%>
