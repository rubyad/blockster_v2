<!-- Mobile Earning Bars - Outside bux-panel to prevent horizontal scroll -->
<%= if !@video_modal_open do %>
  <!-- Logged-in user mobile earning bar -->
  <%= if @current_user && !@already_rewarded && !@article_completed && @pool_available do %>
    <div class="md:hidden fixed bottom-[68px] left-2 right-2 bg-gradient-to-r from-[#8AE388] to-[#6BCB69] text-white rounded-xl shadow-2xl px-3 py-2 z-50">
      <div class="flex items-center justify-between mb-1.5">
        <div class="flex items-center gap-2">
          <img src="https://ik.imagekit.io/blockster/blockster-icon.png" alt="BUX" class="w-6 h-6 rounded-full object-cover" />
          <span class="text-sm font-bold">+{@current_bux} BUX</span>
          <span class="text-xs opacity-75">({@user_multiplier}x)</span>
        </div>
        <span class="text-xs">Keep reading to earn more BUX</span>
      </div>
      <div class="w-full bg-white/20 rounded-full h-1.5">
        <div class="bg-white h-1.5 rounded-full transition-all duration-300" style={"width: #{@current_score * 10}%"}></div>
      </div>
    </div>
  <% end %>

  <!-- Anonymous user mobile earning bar -->
  <%= if @is_anonymous && !@show_signup_prompt && !@earning_bar_dismissed && @engagement_score && @pool_available do %>
    <div class="md:hidden fixed bottom-[68px] left-2 right-2 bg-gradient-to-r from-[#8AE388] to-[#6BCB69] text-white rounded-xl shadow-2xl px-3 py-2 z-50">
      <div class="flex items-center justify-between mb-1.5">
        <div class="flex items-center gap-2">
          <img src="https://ik.imagekit.io/blockster/blockster-icon.png" alt="BUX" class="w-6 h-6 rounded-full object-cover" />
          <span class="text-sm font-bold">+<%= Float.round(@anonymous_earned, 2) %> BUX</span>
        </div>
