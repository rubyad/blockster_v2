<div class="shop-landing">
  <%!-- Full Width Banner Component --%>
  <.live_component
    module={BlocksterV2Web.PostLive.FullWidthBannerComponent}
    id="shop-hero-banner"
    current_user={assigns[:current_user]}
    overlay_text="Shop the collection on Blockster"
    button_text="View All"
    button_url="/shop"
  />

  <%!-- Shop Content Sections --%>
  <.live_component
    module={BlocksterV2Web.PostLive.ShopOneComponent}
    id="shop-section-one"
    current_user={assigns[:current_user]}
  />

  <%!-- Full Width Banner Below Shop One --%>
  <.live_component
    module={BlocksterV2Web.PostLive.FullWidthBannerComponent}
    id="shop-banner-two"
    current_user={assigns[:current_user]}
  />

  <.live_component
    module={BlocksterV2Web.PostLive.ShopTwoComponent}
    id="shop-section-two"
    current_user={assigns[:current_user]}
  />

  <%!-- Full Width Banner Component --%>
  <.live_component
    module={BlocksterV2Web.PostLive.FullWidthBannerComponent}
    id="shop-banner-three"
    current_user={assigns[:current_user]}
  />

  <.live_component
    module={BlocksterV2Web.PostLive.ShopTwoComponent}
    id="shop-section-twoooo"
    current_user={assigns[:current_user]}
  />

  <%!-- Full Width Banner Above Shop Four --%>
  <.live_component
    module={BlocksterV2Web.PostLive.FullWidthBannerComponent}
    id="shop-banner-four"
    current_user={assigns[:current_user]}
  />

  <.live_component
    module={BlocksterV2Web.PostLive.ShopFourComponent}
    id="shop-section-four"
    current_user={assigns[:current_user]}
  />
</div>
